@model AllPetsViewModel

<h1>All Pets</h1>

<div>
    <a href="/Pets/All?page=@Model.PreviosPage" class="btn btn-dark float-left @(Model.PreviousDisabled ? "disabled" : string.Empty)">Prev</a>
    <a href="/Pets/All?page=@Model.NextPage" class="btn btn-dark float-right @(Model.NextDisabled ? "disabled" : string.Empty)">Next</a>
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Category</th>
        <th>Breed</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var pet in Model.Pets)
    {
        <tr>
            <td>@pet.Id</td>
            <td>@pet.Category</td>
            <td>@pet.Breed</td>
            <td>@pet.Description</td>
            <td>@pet.Price</td>
            <td><a href="/Pets/Delete/@pet.Id" class="btn btn-danger btn-sm">Delete</a></td>
        </tr>
    }
</table>

